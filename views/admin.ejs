<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin</title>
    <link rel="stylesheet" href="" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <script
      src="https://kit.fontawesome.com/9b859a045d.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <%- include("partials/nav") %>
    <div class="container">
      <div class="row">
        <div class="col-12 d-flex justify-content-between align-items-center">
          <h1>Articles</h1>
          <div>
            <a href="/new"
              ><button type="button" class="btn btn-success">Nuevo</button></a
            >
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <table class="table border mt-1">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Content</th>
                <th scope="col">Image</th>
                <th scope="col">Created At</th>
                <th scope="col">Author</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% articles.forEach(article => { %>

              <tr>
                <th scope="row"><%= article.id %></th>
                <td><%= article.title %></td>
                <td><%= article.content %></td>
                <td><img id="imgtabla" src="" alt="" /></td>
                <td><%= article.formattedDateAdmin %></td>
                <td><%= article.author.fullname %></td>
                <td>
                  <div>
                    <button type="button" class="btn btn-primary">
                      Editar
                    </button>
                  </div>
                  <div>
                    <form
                      action="/articles/<%= article.id %>?_method=DELETE"
                      method="POST"
                    >
               
                      <button type="submit" class="btn btn-danger">
                        Eliminar
                      </button>
                    </form>
                  </div>
                </td>
              </tr>

              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="iconos">
        <i class="fa-brands fa-square-twitter"></i>
        <i class="fa-brands fa-square-github"></i>
        <i class="fa-brands fa-square-facebook"></i>
      </div>
      <div class="cop">Copyright Â© Hack Academy 2022</div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
